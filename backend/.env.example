# Supabase Database (use connection pooler URL)
DATABASE_URL=postgresql+asyncpg://postgres.xxxxx:password@aws-0-region.pooler.supabase.com:6543/postgres

# OpenAI API
OPENAI_API_KEY=sk-your-openai-key

# Supabase Settings
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGci...your-anon-key

# Auth Settings
SECRET_KEY=your-secret-key-generate-new-for-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id

# Upload Settings (for local temp storage during processing)
UPLOAD_DIR=./storage/uploads
MAX_FILE_SIZE_MB=50
MAX_PAGES=100

# RAG Settings
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RETRIEVAL=5

# Debug (set to False in production)
DEBUG=False
